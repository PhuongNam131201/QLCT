<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền -->
    <solid android:color="#FFFFFF" /> <!-- Nền trắng (có thể thay đổi) -->

    <!-- Góc bo tròn -->
    <corners android:radius="16dp" /> <!-- Bo tròn 16dp -->

    <!-- Viền -->
    <stroke
        android:width="2dp"
        android:color="#E0E0E0" /> <!-- Viền màu xám nhạt -->

    <!-- Padding nội dung bên trong (nếu cần) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
